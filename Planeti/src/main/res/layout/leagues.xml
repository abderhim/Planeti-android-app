<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vidic"
>

    <ImageView
        android:id="@+id/pleague"
        android:layout_width="168dp"
        android:layout_height="200dp"


        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/prel" />

    <ImageView
        android:id="@+id/calcio"
        android:layout_width="161dp"
        android:layout_height="200dp"

        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calcio" />

    <ImageView
        android:id="@+id/ligaa"
        android:layout_width="170dp"
        android:layout_height="239dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/pleague"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/laliga" />

    <ImageView
        android:id="@+id/bundsliga"
        android:layout_width="169dp"
        android:layout_height="224dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"

        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bunds" />

</android.support.constraint.ConstraintLayout>